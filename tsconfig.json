{
    "compilerOptions": {
      "rootDir": ".",
      "declaration": true,
      "declarationDir": "./build/types",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["stories/**/*"],
    "exclude": [
      "node_modules",
      "dist",
      "docs",
      "stories/**/*.stories.tsx",
      "stories/**/*.test.tsx"
    ]
  }
  